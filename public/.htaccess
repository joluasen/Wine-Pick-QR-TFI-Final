
Options -MultiViews

RewriteEngine On

# Evitar loop: si ya es index.php, no reescribir
RewriteRule ^index\.php$ - [L]

# Si existe archivo o carpeta, servirlo normal
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Todo lo dem√°s al front controller
RewriteRule . index.php [QSA,L]
